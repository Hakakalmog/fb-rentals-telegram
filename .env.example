# Facebook Rentals Telegram Bot - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# TELEGRAM CONFIGURATION (Required)
# =============================================================================

# Your Telegram bot token from @BotFather
# Get it by messaging @BotFather on Telegram and creating a new bot
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram chat ID where notifications will be sent
# Get it by messaging @userinfobot on Telegram or use a group chat ID
TELEGRAM_CHAT_ID=your_chat_id_here

# =============================================================================
# FACEBOOK GROUPS (Required)
# =============================================================================

# Facebook group URLs to scrape (comma-separated)
# Example: https://www.facebook.com/groups/123456789,https://www.facebook.com/groups/987654321
FB_GROUP_URLS=https://www.facebook.com/groups/your_group_id_here

# =============================================================================
# FILTERING CONFIGURATION
# =============================================================================

# Maximum rental price to consider (in your local currency)
MAX_PRICE=2000

# Required location keywords (comma-separated)
# Posts must contain at least one of these keywords
LOCATION_KEYWORDS=tel aviv,ramat gan,givatayim

# =============================================================================
# SCRAPING CONFIGURATION
# =============================================================================

# How often to check for new posts (in minutes)
SCRAPE_INTERVAL_MINUTES=30

# Maximum number of posts to process per scrape cycle
MAX_POSTS_PER_SCRAPE=10

# =============================================================================
# AI MODEL CONFIGURATION (Ollama + LLaMA)
# =============================================================================

# LLaMA model to use for intelligent filtering
# Popular options: llama3.2:3b, llama3.2:1b, llama3:8b
OLLAMA_MODEL=llama3.2:3b

# Ollama server host
# Use http://localhost:11434 for local installation
# Use http://ollama:11434 for Docker Compose
OLLAMA_HOST=http://localhost:11434

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Path to SQLite database file (will be created automatically)
DATABASE_PATH=./data/posts.db

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Path to log file (will be created automatically)
LOG_FILE=./logs/app.log

# =============================================================================
# BROWSER CONFIGURATION
# =============================================================================

# Run browser in headless mode (true/false)
# Set to false for debugging to see the browser window
HEADLESS_MODE=true

# Directory to store browser session data (will be created automatically)
BROWSER_DATA_DIR=./browser_data
