# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 88

[*.py]
indent_size = 2
max_line_length = 88

[*.{yml,yaml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = 80

[*.sh]
indent_size = 2

[Makefile]
indent_style = tab

[*.{toml,ini}]
indent_size = 4
